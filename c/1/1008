/*
identificação de funciorio e a sua bonificação por horas trabalhadas
*/
#include <stdio.h>

int main() {
  int id; //número do assalariado 
  double horasTrabalhas, precoHora, finalDoMes; //valores

  scanf("%d %lf %lf", &id, &horasTrabalhas, &precoHora); //leitura 

  finalDoMes = horasTrabalhas * precoHora; //equação

  printf("NUMBER = %d\n", id); //linhas separadas para o código e o dinheiro
  printf("SALARY = U$ %.2lf\n", finalDoMes);
  return 0;
}
